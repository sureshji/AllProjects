<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		id="myDialog"
		noDataText="No Storage Location Found"
		title="Select StorageLocation"
		search="handleSearch"
		confirm="handleClose"
		cancel="handleClose"
		items="{
			path : '/HT001lLgortSet',
			sorter : {
				path : 'Lgort',
				descending : false
			}
		}">
		<ColumnListItem vAlign="Middle" id="clif11">
			<cells>
				<ObjectIdentifier title="{Werks}" id="oif12"/>
                <Text text="{Lgort}"  id="tf112"/>
                <Text text="{Lgobe}" wrapping="false" id="tf122"/>
			</cells>
		</ColumnListItem>
        <columns>
            <Column width="11rem" id="cf12">
				<header>
				    <Text text="Plant" id="lf112"/>
                </header>
			</Column>
			 <Column width="11rem" id="cf252">
				<header>
				    <Text text="Stor. Loc." id="lf252"/>
                </header>
			</Column>
            <Column width="11rem" id="cf122">
				<header>
					<Text text="Description" id="lf122"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>